<div class="border-form-div">

<h2>Entrar en LookFinder</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, :style => "width: 500px; height: 40px;" %>
  </div>

  <div class="field">
    Contrase√±a<br />
    <%= f.password_field :password, autocomplete: "off", :style => "width: 500px; height: 40px;" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      Recordarme
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Entrar", :class => 'btn_send' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
