<div class="border-form-div">

<h2>Registro</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

   <div class="field">
    Nombre<br />
    <%= f.text_field :name, autofocus: true, :style => "width: 500px; height: 35px;" %>
  </div>

  <div class="field">
    E-mail<br />
    <%= f.email_field :email, :style => "width: 500px; height: 35px;" %>
  </div>

  <div class="field">
    Password
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :style => "width: 500px; height: 35px;" %>
  </div>

  <div class="field">
    Password confirmation<br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :style => "width: 500px; height: 35px;" %>
  </div>

  <div class="actions">
    <%= f.submit "Registrarse" %>
  </div>
<% end %>
Si ya estás registrado, logeate aquí:
<%= render "devise/shared/links" %>

</div>
